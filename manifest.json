{
  "manifest_version": 3,
  "name": "Break Reminder",
  "version": "1.0",
  "description": "A simple extension to remind you to take breaks while browsing.",
  "permissions": [
    "storage", 
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}